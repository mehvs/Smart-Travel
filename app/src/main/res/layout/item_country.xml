<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="40dp">

    <TextView
        android:id="@+id/country_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/new_cases_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="New cases"
        app:layout_constraintBaseline_toBaselineOf="@+id/country_name"
        app:layout_constraintStart_toEndOf="@+id/country_name" />

    <TextView
        android:id="@+id/new_cases_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:textColor="@color/red"
        app:layout_constraintBaseline_toBaselineOf="@+id/country_name"
        app:layout_constraintStart_toEndOf="@+id/new_cases_label" />


</androidx.constraintlayout.widget.ConstraintLayout>